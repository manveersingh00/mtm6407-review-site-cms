{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "rating": {
      "type": "decimal"
    },
    "category": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "published_date": {
      "type": "datetime"
    },
    "content": {
      "type": "blocks"
    }
  }
}
